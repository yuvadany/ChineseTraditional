<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.englishbible.croatianbible">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.englishbible.croatianbible.EditNotesActivity"
            android:label="Update Notes"></activity>
        <activity
            android:name="com.englishbible.croatianbible.NotesViewActivity"
            android:label="View Notes" />
        <activity
            android:name="com.englishbible.croatianbible.AddNotesActivity"
            android:label="Add Notes" />
        <activity
            android:name="com.englishbible.croatianbible.NotesActivity"
            android:label="Notes" />
        <activity android:name="com.englishbible.croatianbible.TeluguSongsActivity" />
        <activity android:name="com.englishbible.croatianbible.SettingsActivity" />
        <activity android:name="com.englishbible.croatianbible.BookmarkActivity" />
        <activity
            android:name="com.englishbible.croatianbible.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.englishbible.croatianbible.PraisesActivity" />
        <activity android:name="com.englishbible.croatianbible.LyricsActivity" />
        <activity android:name="com.englishbible.croatianbible.SongsActivity" />
    </application>

</manifest>